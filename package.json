{
  "name": "vvr-poc",
  "version": "0.0.1",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "account": "yarn workspace @vvr-poc/foundry account",
    "chain": "yarn workspace @vvr-poc/foundry chain",
    "compile": "yarn workspace @vvr-poc/foundry compile",
    "deploy": "yarn workspace @vvr-poc/foundry deploy",
    "deploy:verify": "yarn workspace @vvr-poc/foundry deploy:verify",
    "flatten": "yarn workspace @vvr-poc/foundry flatten",
    "fork": "yarn workspace @vvr-poc/foundry fork",
    "format": "yarn next:format && yarn foundry:format",
    "foundry:format": "yarn workspace @vvr-poc/foundry format",
    "foundry:lint": "yarn workspace @vvr-poc/foundry lint",
    "foundry:test": "yarn workspace @vvr-poc/foundry test",
    "foundry:test:watch": "yarn workspace @vvr-poc/foundry test:watch",
    "generate": "yarn workspace @vvr-poc/foundry generate",
    "postinstall": "husky install",
    "next:build": "yarn workspace @vvr-poc/nextjs build",
    "next:check-types": "yarn workspace @vvr-poc/nextjs check-types",
    "next:format": "yarn workspace @vvr-poc/nextjs format",
    "next:lint": "yarn workspace @vvr-poc/nextjs lint",
    "next:serve": "yarn workspace @vvr-poc/nextjs serve",
    "precommit": "lint-staged",
    "start": "yarn workspace @vvr-poc/nextjs dev",
    "test": "yarn foundry:test",
    "test:watch": "yarn foundry:test:watch",
    "vercel": "yarn workspace @vvr-poc/nextjs vercel",
    "vercel:yolo": "yarn workspace @vvr-poc/nextjs vercel:yolo",
    "verify": "yarn workspace @vvr-poc/foundry verify"
  },
  "devDependencies": {
    "husky": "~8.0.3",
    "lint-staged": "~13.2.2"
  },
  "packageManager": "yarn@3.2.3",
  "engines": {
    "node": ">=18.18.0"
  }
}
